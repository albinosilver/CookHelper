    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:text="Recipe Name:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText10" />

                <TextView
                    android:text="Number of Calories:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editText11"
                    android:inputType="number" />

                <TextView
                    android:text="Cooking Time: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editText12"
                    android:inputType="number" />

                <TextView
                    android:text="Servings:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView26" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editText14"
                    android:inputType="number" />

            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="fill_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/addCategoryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Category" />

                <EditText
                    android:id="@+id/addCategoryInput"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.38"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/newButton"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:elevation="1dp"
                    android:text="New"
                    android:textColor="@color/white_text"
                    android:textSize="8sp"
                    android:onClick="newAttribute"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|right"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/addTypeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Type" />

                <EditText
                    android:id="@+id/addTypeInput"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.38"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28" />

                <Button
                    android:id="@+id/new2Button"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="New"
                    android:textColor="@color/white_text"
                    android:textSize="8sp"
                    android:onClick="newAttribute"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:text="Add Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addImageLabel" />

                <EditText
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/addImageInput"
                    android:layout_weight="0.38" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.23" />

                <Button
                    android:id="@+id/browseButton"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Browse"
                    android:textColor="@color/white_text"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Rating:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/addRatingLabel" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addRating"
                    android:numStars="5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Ingredients: "
                    android:id="@+id/addIngredientlabel"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/addIngredientInput"
                    android:layout_below="@+id/titleFeatured"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <!--<Button
                    android:text="Add Ingredient(s)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button5"
                    android:layout_below="@+id/editText8"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:backgroundTint="@color/colorPrimary" />-->
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Add Instructions:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/addRecipeStepLabel"
                    android:layout_above="@+id/addRecipeStepInput"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:ems="10"
                    android:id="@+id/addRecipeStepInput"
                    android:layout_above="@+id/saveButton"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:inputType="textMultiLine" />

                <!--<Button
                    android:text="Add Step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button1"
                    android:layout_above="@+id/button2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:backgroundTint="@color/colorPrimary" />-->

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/saveButton"
                    android:layout_weight="1"
                    android:textColor="@color/white_text"
                    android:backgroundTint="@color/colorPrimary" />

                <Button
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/cancelButton"
                    android:layout_weight="1"
                    android:textColor="@color/white_text"
                    android:backgroundTint="@color/colorAccent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
